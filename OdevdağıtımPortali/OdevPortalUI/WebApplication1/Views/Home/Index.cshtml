@using WebApplication1.Models
@model List<DersModel>
@{
    ViewData["Title"] = "Home Page";
}


<div class="container mt-5">
    <div class="row">
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Ders Adı</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.dersAdi</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>